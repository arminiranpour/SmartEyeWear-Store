@model SmartEyewearStore.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<section class="container mx-auto py-16 px-4">
    <div class="max-w-md mx-auto bg-white p-8 rounded-lg shadow-lg">
        <h2 class="text-2xl font-bold mb-6 text-center">Login to your account</h2>
        <form asp-action="Login" method="post" class="space-y-4">
            <div>
                <label asp-for="Email" class="block mb-1 font-semibold"></label>
                <input asp-for="Email" class="w-full rounded border border-gray-300 px-3 py-2 focus:outline-none focus:border-primary focus:ring-2 focus:ring-primary" />
                <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
            </div>
            <div>
                <label asp-for="Password" class="block mb-1 font-semibold"></label>
                <input asp-for="Password" class="w-full rounded border border-gray-300 px-3 py-2 focus:outline-none focus:border-primary focus:ring-2 focus:ring-primary" />
                <span asp-validation-for="Password" class="text-red-500 text-sm"></span>
            </div>
            <input type="hidden" asp-for="PendingSurvey" id="PendingSurvey" />

            <button type="submit" class="w-full bg-primary text-white border border-primary rounded-full py-2 font-semibold hover:bg-transparent hover:text-primary">Login</button>
        </form>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const pending = localStorage.getItem('pendingSurvey');
            if (pending) {
                document.getElementById('PendingSurvey').value = pending;
            }
        });

        document.querySelector('form').addEventListener('submit', function () {
            if (document.getElementById('PendingSurvey').value) {
                localStorage.removeItem('pendingSurvey');
            }
        });
    </script>
}