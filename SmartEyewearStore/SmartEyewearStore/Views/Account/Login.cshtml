@model SmartEyewearStore.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<section id="register-login-page" class="bg-white py-16">
    <div class="container mx-auto px-4 flex justify-center">
        <div class="md:w-1/2 bg-white rounded-lg shadow-md p-4 md:p-10 md:m-10">
            <h2 class="text-2xl font-semibold mb-4 text-center">Login to your account</h2>
            <form asp-action="Login" method="post">
                <div class="mb-3">
                    <label asp-for="Email" class="block font-semibold mb-1"></label>
                    <input asp-for="Email" class="w-full px-3 py-1 border rounded-full focus:border-transparent focus:outline-none focus:ring-2 focus:ring-primary" />
                    <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="block font-semibold mb-1"></label>
                    <input asp-for="Password" class="w-full px-3 py-1 border rounded-full focus:border-transparent focus:outline-none focus:ring-2 focus:ring-primary" />
                    <span asp-validation-for="Password" class="text-red-500 text-sm"></span>
                </div>

                <input type="hidden" asp-for="PendingSurvey" id="PendingSurvey" />

                <div class="flex items-center mb-3">
                    <input type="checkbox" id="remember-me" class="mr-2">
                    <label for="remember-me">Remember Me</label>
                </div>

                <div class="mb-3">
                    <a href="#" class="text-primary hover:underline">Forgot Password?</a>
                </div>

                <button type="submit" class="bg-primary text-white border border-primary hover:bg-transparent hover:text-primary py-2 px-3 rounded-full w-full font-semibold">
                    Login
                </button>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const pending = localStorage.getItem('pendingSurvey');
            if (pending) {
                document.getElementById('PendingSurvey').value = pending;
            }
        });

        document.querySelector('form').addEventListener('submit', function () {
            if (document.getElementById('PendingSurvey').value) {
                localStorage.removeItem('pendingSurvey');
            }
        });
    </script>
}
