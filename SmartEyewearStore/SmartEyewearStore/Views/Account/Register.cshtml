@model SmartEyewearStore.Models.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<section class="container mx-auto py-16 px-4">
    <div class="max-w-md mx-auto bg-white p-8 rounded-lg shadow-lg">
        <h2 class="text-2xl font-bold mb-6 text-center">Create your account</h2>
        <form asp-action="Register" method="post" class="space-y-4">
            <div>
                <label asp-for="Username" class="block mb-1 font-semibold"></label>
                <input asp-for="Username" class="w-full rounded border border-gray-300 px-3 py-2 focus:outline-none focus:border-primary focus:ring-2 focus:ring-primary" />
                <span asp-validation-for="Username" class="text-red-500 text-sm"></span>
            </div>
            <div>
                <label asp-for="Email" class="block mb-1 font-semibold"></label>
                <input asp-for="Email" class="w-full rounded border border-gray-300 px-3 py-2 focus:outline-none focus:border-primary focus:ring-2 focus:ring-primary" />
                <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
            </div>
            <div>
                <label asp-for="Password" class="block mb-1 font-semibold"></label>
                <input asp-for="Password" class="w-full rounded border border-gray-300 px-3 py-2 focus:outline-none focus:border-primary focus:ring-2 focus:ring-primary" />
                <span asp-validation-for="Password" class="text-red-500 text-sm"></span>
            </div>
            <div>
                <label asp-for="ConfirmPassword" class="block mb-1 font-semibold"></label>
                <input asp-for="ConfirmPassword" class="w-full rounded border border-gray-300 px-3 py-2 focus:outline-none focus:border-primary focus:ring-2 focus:ring-primary" />
                <span asp-validation-for="ConfirmPassword" class="text-red-500 text-sm"></span>
            </div>
            <button type="submit" class="w-full bg-primary text-white border border-primary rounded-full py-2 font-semibold hover:bg-transparent hover:text-primary">Register</button>
        </form>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}