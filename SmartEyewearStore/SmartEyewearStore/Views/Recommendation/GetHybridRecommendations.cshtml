@model IEnumerable<SmartEyewearStore.Models.VariantRecommendation>
@{
    ViewData["Title"] = "Recommendations";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="container mx-auto p-4">
    <h1 class="text-2xl font-bold mb-4">Your Recommendations</h1>
    @if (!Model.Any())
    {
        <p>No recommendations available.</p>
    }
    else
    {
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
            @foreach (var rec in Model)
            {
                var variant = rec.Variant;
                var product = variant.Product;
                var img = variant.Images.OrderBy(i => i.SortOrder).FirstOrDefault()?.Url;
                var price = variant.Prices.OrderBy(p => p.ValidFrom).FirstOrDefault();
                <div class="bg-white p-4 rounded-lg shadow">
                    @if (!string.IsNullOrEmpty(img))
                    {
                        <img src="@img" alt="@product.Name" class="w-full object-cover mb-4 rounded-lg" />
                    }
                    <a href="/product/@product.Slug" class="text-lg font-semibold">@product.Name</a>
                    @if (price != null)
                    {
                        <div class="mt-2 text-lg font-bold text-gray-900">$@((price.SalePriceCents ?? price.BasePriceCents) / 100.0m)</div>
                    }
                </div>
            }
        </div>
    }
</section>