@{
    ViewData["Title"] = "Scan Face";
}

<h2>Scan your face</h2>

<form asp-action="Analyze" asp-controller="Scan" method="post" enctype="multipart/form-data">
    <input type="file" name="file" accept="image/*" />
    <button type="submit">Upload & Analyze</button>
</form>

@if (ViewBag.FaceShape != null)
{
    <p><strong>Shape:</strong> @ViewBag.FaceShape</p>
    <p><strong>Gender:</strong> @ViewBag.Gender</p>
    <p><strong>Age:</strong> @ViewBag.Age</p>
}

@if (ViewBag.Error != null)
{
    <p style="color:red;">@ViewBag.Error</p>
}
