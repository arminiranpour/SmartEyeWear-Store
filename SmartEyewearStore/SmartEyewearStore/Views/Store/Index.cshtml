@model IEnumerable<SmartEyewearStore.Models.Glasses>

@{
    ViewData["Title"] = "Store";
}

<h1>Our Glasses Collection</h1>

<div class="glasses-container">
    @foreach (var glass in Model)
    {
        <div class="glass-card">
            <h3>@glass.GlassesInfo?.Name</h3>
            <img src="@glass.ImageUrl" alt="Glasses image" style="width:200px; height:auto;" />
            <p>Price: @glass.Price</p>
            <p>Color: @glass.Color</p>
            <p>In Stock: @(glass.InStock ? "Yes" : "No")</p>
        </div>
    }
</div>

<style>
    .glasses-container {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
    }
    .glass-card {
        border: 1px solid #ccc;
        border-radius: 8px;
        padding: 10px;
        width: 220px;
        text-align: center;
    }
    .glass-card img {
        max-width: 100%;
        border-radius: 4px;
    }
</style>
