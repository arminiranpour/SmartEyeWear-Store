@model SmartEyewearStore.Models.ShopViewModel
@{
    ViewData["Title"] = "Shop";
}

<section class="shop-page">
    <div class="container">
        <form method="get" asp-action="Shop" class="filter-form">
            <div class="row">
                <!-- Brand Filter -->
                <div class="col-md-3">
                    <label for="BrandId">Brand</label>
                    <select asp-for="BrandId" asp-items="Model.BrandItems" class="form-control">
                        <option value="">All Brands</option>
                    </select>
                </div>

                <!-- Size Filter -->
                <div class="col-md-3">
                    <label for="SizeId">Size</label>
                    <select asp-for="SizeId" asp-items="Model.SizeItems" class="form-control">
                        <option value="">All Sizes</option>
                    </select>
                </div>

                <!-- Shape Filter -->
                <div class="col-md-3">
                    <label for="ShapeId">Shape</label>
                    <select asp-for="ShapeId" asp-items="Model.ShapeItems" class="form-control">
                        <option value="">All Shapes</option>
                    </select>
                </div>

                <!-- Color Filter -->
                <div class="col-md-3">
                    <label for="ColorId">Color</label>
                    <select asp-for="ColorId" asp-items="Model.ColorItems" class="form-control">
                        <option value="">All Colors</option>
                    </select>
                </div>

                <!-- Material Filter -->
                <div class="col-md-3">
                    <label for="MaterialId">Material</label>
                    <select asp-for="MaterialId" asp-items="Model.MaterialItems" class="form-control">
                        <option value="">All Materials</option>
                    </select>
                </div>

                <!-- Rim Filter -->
                <div class="col-md-3">
                    <label for="RimStyleId">Rim Style</label>
                    <select asp-for="RimStyleId" asp-items="Model.RimItems" class="form-control">
                        <option value="">All Rim Styles</option>
                    </select>
                </div>

                <!-- Price Filter -->
                <div class="col-md-3">
                    <label for="PriceRangeId">Price Range</label>
                    <select asp-for="PriceRangeId" asp-items="Model.PriceRangeItems" class="form-control">
                        <option value="">All Prices</option>
                    </select>
                </div>

                <!-- Extra Feature Filter -->
                <div class="col-md-3">
                    <label for="FeatureId">Feature</label>
                    <select asp-for="FeatureId" asp-items="Model.FeatureItems" class="form-control">
                        <option value="">All Features</option>
                    </select>
                </div>

                <div class="col-md-12 mt-3">
                    <button type="submit" class="btn btn-primary">Filter</button>
                </div>
            </div>
        </form>

        <div class="row mt-4">
            @foreach (var product in Model.Products)
            {
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" />
                        <div class="card-body">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text">@product.Price.ToString("C")</p>
                            <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-outline-primary">View</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
