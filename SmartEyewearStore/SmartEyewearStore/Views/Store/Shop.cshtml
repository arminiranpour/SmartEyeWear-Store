@model SmartEyewearStore.ViewModels.CatalogPageVM
@{
    ViewData["Title"] = "Shop";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="shop" class="py-6">
    <div class="container mx-auto px-4">
        <!-- Toolbar -->
        <div class="flex flex-col md:flex-row justify-between items-center py-4 gap-3">
            <div class="flex items-center gap-2">
                <a href="@Url.Action("Index", "Shop")" class="bg-primary text-white hover:bg-transparent hover:text-primary border border-primary py-2 px-4 rounded-full">Clear all</a>
            </div>
            <div class="flex items-center gap-3">
                <form id="sort-form" method="get" class="relative">
                    @foreach (var b in Model.Filters.BrandIds ?? Array.Empty<int>())
                    {
                        <input type="hidden" name="BrandIds" value="@b" />
                    }
                    @foreach (var s in Model.Filters.ShapeIds ?? Array.Empty<int>())
                    {
                        <input type="hidden" name="ShapeIds" value="@s" />
                    }
                    @foreach (var c in Model.Filters.ColorIds ?? Array.Empty<int>())
                    {
                        <input type="hidden" name="ColorIds" value="@c" />
                    }
                    @foreach (var m in Model.Filters.MaterialIds ?? Array.Empty<int>())
                    {
                        <input type="hidden" name="MaterialIds" value="@m" />
                    }
                    @foreach (var r in Model.Filters.RimStyleIds ?? Array.Empty<int>())
                    {
                        <input type="hidden" name="RimStyleIds" value="@r" />
                    }
                    @foreach (var f in Model.Filters.FeatureIds ?? Array.Empty<int>())
                    {
                        <input type="hidden" name="FeatureIds" value="@f" />
                    }
                    <input type="hidden" name="Search" value="@Model.Filters.Search" />
                    <input type="hidden" name="Page" value="@Model.Filters.Page" />
                    <input type="hidden" name="PageSize" value="@Model.Filters.PageSize" />
                    <select name="Sort" class="block appearance-none w-full bg-white border hover:border-primary px-4 py-2 pr-8 rounded-full shadow leading-tight focus:outline-none" onchange="this.form.submit()">
                        <option value="" selected="@(Model.Filters.Sort == null ? "selected" : null)">Default</option>
                        <option value="price_asc" selected="@(Model.Filters.Sort == "price_asc" ? "selected" : null)">Price: Low to High</option>
                        <option value="price_desc" selected="@(Model.Filters.Sort == "price_desc" ? "selected" : null)">Price: High to Low</option>
                        <option value="newest" selected="@(Model.Filters.Sort == "newest" ? "selected" : null)">Newest</option>
                    </select>
                </form>
                <button id="products-toggle-filters" class="md:hidden bg-primary text-white py-2 px-4 rounded-full">Show Filters</button>
            </div>
        </div>

        <div class="flex flex-col md:flex-row gap-6">
            <!-- Sidebar Filters -->
            <form id="filters-form" method="get" class="w-full md:w-1/4 p-4 hidden md:block border border-gray-line rounded-2xl">
                <div class="mb-6 pb-6 border-b border-gray-line">
                    <h3 class="text-lg font-semibold mb-3">Search</h3>
                    <input type="text" name="Search" value="@Model.Filters.Search" class="w-full p-2 border border-gray-300 rounded" placeholder="Search products..." />
                </div>

                <div class="mb-6 pb-6 border-b border-gray-line">
                    <h3 class="text-lg font-semibold mb-3">Brands</h3>
                    <div class="space-y-2">
                        @foreach (var b in Model.Filters.Brands)
                        {
                            <label class="flex items-center">
                                <input type="checkbox" class="form-checkbox custom-checkbox" name="BrandIds" value="@b.Id" @(b.Selected ? "checked" : null) />
                                <span class="ml-2">@b.Label</span>
                            </label>
                        }
                    </div>
                </div>

                <div class="mb-6 pb-6 border-b border-gray-line">
                    <h3 class="text-lg font-semibold mb-3">Shapes</h3>
                    <div class="space-y-2">
                        @foreach (var s in Model.Filters.Shapes)
                        {
                            <label class="flex items-center">
                                <input type="checkbox" class="form-checkbox custom-checkbox" name="ShapeIds" value="@s.Id" @(s.Selected ? "checked" : null) />
                                <span class="ml-2">@s.Label</span>
                            </label>
                        }
                    </div>
                </div>

                <div class="mb-6 pb-6 border-b border-gray-line">
                    <h3 class="text-lg font-semibold mb-3">Colors</h3>
                    <div class="space-y-2">
                        @foreach (var c in Model.Filters.Colors)
                        {
                            <label class="flex items-center">
                                <input type="checkbox" class="form-checkbox custom-checkbox" name="ColorIds" value="@c.Id" @(c.Selected ? "checked" : null) />
                                <span class="ml-2">@c.Label</span>
                            </label>
                        }
                    </div>
                </div>

                <div class="mb-6 pb-6 border-b border-gray-line">
                    <h3 class="text-lg font-semibold mb-3">Materials</h3>
                    <div class="space-y-2">
                        @foreach (var m in Model.Filters.Materials)
                        {
                            <label class="flex items-center">
                                <input type="checkbox" class="form-checkbox custom-checkbox" name="MaterialIds" value="@m.Id" @(m.Selected ? "checked" : null) />
                                <span class="ml-2">@m.Label</span>
                            </label>
                        }
                    </div>
                </div>

                <div class="mb-6 pb-6 border-b border-gray-line">
                    <h3 class="text-lg font-semibold mb-3">Rim Styles</h3>
                    <div class="space-y-2">
                        @foreach (var r in Model.Filters.RimStyles)
                        {
                            <label class="flex items-center">
                                <input type="checkbox" class="form-checkbox custom-checkbox" name="RimStyleIds" value="@r.Id" @(r.Selected ? "checked" : null) />
                                <span class="ml-2">@r.Label</span>
                            </label>
                        }
                    </div>
                </div>

                <div class="mb-6 pb-6 border-b border-gray-line">
                    <h3 class="text-lg font-semibold mb-3">Features</h3>
                    <div class="space-y-2">
                        @foreach (var f in Model.Filters.Features)
                        {
                            <label class="flex items-center">
                                <input type="checkbox" class="form-checkbox custom-checkbox" name="FeatureIds" value="@f.Id" @(f.Selected ? "checked" : null) />
                                <span class="ml-2">@f.Label</span>
                            </label>
                        }
                    </div>
                </div>

                <input type="hidden" name="Sort" value="@Model.Filters.Sort" />
                <input type="hidden" name="Page" value="1" />
                <input type="hidden" name="PageSize" value="@Model.Filters.PageSize" />
                <button type="submit" class="w-full bg-primary text-white hover:bg-transparent hover:text-primary border border-primary py-2 px-4 rounded-full">Apply</button>
            </form>

            <!-- Product Grid -->
            <div class="w-full md:w-3/4">
                <div class="flex justify-between items-center mb-4">
                    <span class="text-sm font-semibold">@Model.TotalItems results</span>
                </div>

                @if (Model.Items.Any())
                {
                    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
                        @foreach (var item in Model.Items)
                        {
                            <div class="bg-white p-4 rounded-lg shadow">
                                @{
                                    var hasUrl = !string.IsNullOrWhiteSpace(item.PrimaryImageUrl);
                                    var src = hasUrl ? Url.Content(item.PrimaryImageUrl.Trim()) : Url.Content("~/img/placeholder-glasses.png");
                                }
                                <a href="@Url.Action("Details", "Product", new { slug = item.Slug })">
                                    <img src="@src" alt="@item.Name" class="w-full object-cover mb-4 rounded-lg" />
                                </a>

                                <a href="@Url.Action("Details", "Product", new { slug = item.Slug })" class="text-lg font-semibold mb-2 hover:text-primary block">@item.Name</a>

                                @if (!string.IsNullOrEmpty(item.BrandName))
                                {
                                    <p class="my-2 text-sm text-gray-600">@item.BrandName</p>
                                }

                                <div class="flex items-center mb-4">
                                    @if (item.MinPrice > 0)
                                    {
                                        <span class="text-lg font-bold text-gray-900">$@item.MinPrice.ToString("0.00")</span>
                                    }
                                    else
                                    {
                                        <span class="text-sm text-gray-500">Price unavailable</span>
                                    }
                                </div>

                                <a href="@Url.Action("Details", "Product", new { slug = item.Slug })" class="bg-primary border border-transparent hover:bg-transparent hover:border-primary text-white hover:text-primary font-semibold py-2 px-4 rounded-full w-full text-center">View</a>
                            </div>
                        }
                    </div>

                    <div class="flex justify-center mt-8">
                        <ul class="inline-flex space-x-2">
                            @for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                var href = Url.Action("Index", new
                                {
                                    Page = i,
                                    PageSize = Model.Filters.PageSize,
                                    Sort = Model.Filters.Sort,
                                    Search = Model.Filters.Search,
                                    BrandIds = Model.Filters.BrandIds,
                                    ShapeIds = Model.Filters.ShapeIds,
                                    ColorIds = Model.Filters.ColorIds,
                                    MaterialIds = Model.Filters.MaterialIds,
                                    RimStyleIds = Model.Filters.RimStyleIds,
                                    FeatureIds = Model.Filters.FeatureIds
                                });
                                <li>
                                    <a href="@href" class="w-10 h-10 flex items-center justify-center rounded-full @(i == Model.Page ? "bg-primary text-white" : "hover:bg-primary hover:text-white")">@i</a>
                                </li>
                            }
                        </ul>
                    </div>
                }
                else
                {
                    <div class="bg-white p-6 rounded-lg shadow">
                        <p class="mb-3">No results found.</p>
                        <a href="@Url.Action("Index", "Shop")" class="underline text-primary">Reset filters</a>
                    </div>
                }
            </div>
        </div>
    </div>

    <script>
        (function () {
            var btn = document.getElementById('products-toggle-filters');
            var panel = document.getElementById('filters-form');
            if (btn && panel) {
                btn.addEventListener('click', function () {
                    panel.classList.toggle('hidden');
                });
            }
        })();
    </script>
</section>
