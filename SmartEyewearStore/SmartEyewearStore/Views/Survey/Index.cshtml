@model SurveyViewModel
@{
    ViewData["Title"] = "پرسشنامه انتخاب عینک";
}

<h2>📝 پرسشنامه انتخاب عینک</h2>

<form asp-action="Index" method="post">

    <div class="form-group">
        <label>نوع عینک:</label><br />
        @foreach (var type in Enum.GetValues(typeof(SurveyViewModel.GlassTypeEnum)))
        {
        <input type="radio" asp-for="GlassType" value="@type" />  @type  <br />
        }
    </div>

    <div class="form-group">
        <label>جنس عینک:</label><br />
        @foreach (var material in Enum.GetValues(typeof(SurveyViewModel.MaterialEnum)))
        {
        <input type="radio" asp-for="Material" value="@material" />  @material  <br />
        }
    </div>

    <div class="form-group">
        <label>جنسیت کاربر:</label><br />
        @foreach (var gender in Enum.GetValues(typeof(SurveyViewModel.GenderEnum)))
        {
        <input type="radio" asp-for="Gender" value="@gender" />  @gender  <br />
        }
    </div>

    <div class="form-group">
        <label>تن رنگی:</label><br />
        @foreach (var tone in Enum.GetValues(typeof(SurveyViewModel.ToneEnum)))
        {
        <input type="radio" asp-for="Tone" value="@tone" />  @tone  <br />
        }
    </div>

    <button type="submit" class="btn btn-success mt-3">ثبت اطلاعات</button>

</form>
