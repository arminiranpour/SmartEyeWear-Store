@model SmartEyewearStore.Models.SurveyViewModel

<h2>🎉 اطلاعات شما با موفقیت ثبت شد!</h2>
<p>بر اساس پاسخ‌های شما، عینک‌های مناسب پیشنهاد خواهند شد.</p>

@section Scripts {
    <script>
        const surveyData = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model));
        localStorage.setItem('pendingSurvey', JSON.stringify(surveyData));
    </script>
}